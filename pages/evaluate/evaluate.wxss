/* pages/evaluate/evaluate.wxss */
page{
  justify-items: center;
  align-items: center;
  padding: 0 10px 0 5px;
}
/* 顶端栏 */
.topbar{
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:10px 0;
}

.topbar .top-left, .topbar .top-right{
  display:flex;
  justify-content: center;
  align-items: center;
}
.imgLocation,.imgSearch{
  width: 19px;
  height: 19px;
  margin: 0 10px;
}

/* 上方图片 */
.top-picture-view{
  display: flex;
  padding: 10px 20px;
  justify-content: center;
  align-items: center;
}
.top-picture{
  width: 335px;
  height: 145px;
}

.hot_item{
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin: 5px 10px;
}

.head-nav{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.head-nav-item{
  width: 100px;
  height: 140px;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 10rpx 50rpx -10rpx gainsboro;
}
.bgcolor{
  width: 60px;
  height: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgb(229, 230, 183);
}
.bg1{
  background-color: #FEECEB;
}
.bg2{
  background-color: #EBF6FF;
}
.bg3{
  background-color: #A86DFF;
}
.hot-picture{
   width:30px;
   height:30px;
   z-index: 99;
}
.hot-title{
  font-size: 12px;
}
.head-nav .head-nav-title{
  margin-top:15px;
  
}

/* 下方列表 */
.job-list{
  padding: 15px;
  display: flex;
  flex-direction: column;
}
.job-list .line1,.line2,.line3{
  display: flex;
  flex-direction: row;
  margin: 5px;
}
.line1,.line3{
  justify-content: space-between;
}
.line2{
  justify-content: flex-start;
}
.line1-left{
  font-size: 16px;
}
.line1-right{
  font-size: 16px;
  color: rgba(99, 99, 204, 0.856);
}
.line2 .text{
  font-size: 12px;
  margin-right: 10px;
  color: #787878;
}
.line3 .left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.line3 .imgCompany{
  width: 20px;
  height: 20px;
  margin: 10px;
  padding: 10px;
  border: 1px solid gainsboro;
}
.line3 .left .text{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
}
.line3 .left .text .text-top{
  font-size: 12px;
}
.line3 .left .text .text-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 10px;
}
.line3 .right{
  display: flex;
  align-items: center; 
}
.line3 .right .text{
  font-size: 12px;
  padding: 10px;
  margin-left: 10px;
  border: 1px solid rgba(122, 122, 230, 0.842);
  border-radius: 20px;
}
.borderBottom{
  width:100%;
  border-bottom:10px solid #eee;
}