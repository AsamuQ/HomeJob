/**index.wxss**/
page{
  justify-items: center;
  align-items: center;
}
/* 顶端栏 */
.topbar{
  display:flex;
  justify-content: space-between;
  align-items: center;
  padding:10px 0;
}

.topbar .top-left, .topbar .top-right{
  display:flex;
  justify-content: center;
  align-items: center;
}
.imgLocation,.imgSearch{
  width: 19px;
  height: 19px;
  margin: 0 10px;
}
/* 上方图片 */
.top-picture-view{
  display: flex;
  padding: 10px 20px;
  justify-content: center;
  align-items: center;
}
.top-picture-view swiper{
  width: 100%;
}
.top-picture{
  width: 335px;
  height: 145px;
}
  /* 上方图片嵌套文字 */
.top-picture-text{
  position: absolute;
  top: 76px;
  left: 33px;
}
.top-picture-text .text1{
  font-size: 18px;
  color: white;
}
.top-picture-text .text2{
  font-size: 12px;
  color: rgba(192, 185, 185, 0.795);
  margin: 10px 0;
}
.top-picture-text .text3{
  display: flex;
  justify-content: center;
  width: 60px;
  font-size: 14px;
  color: white;
  border: 1px solid white;
  border-radius: 10px;
}


/* 功能区 */
.function-area{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.function-area .imgFunction{
  width: 45px;
  height: 49px;
}
.function-area .function{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10px;
}

/* 上下区分隔线 */
.borderBottom{
  width:100%;
  border-bottom:10px solid #eee;
}

/* 下方标签页 */
.swiper-tab{
  width: 100%;
  text-align: start;
  line-height: 80rpx;
  margin: auto 5px;
}
.swiper-tab-list{  
  font-size: 30rpx;
  display: inline-block;
  width: 35px;
  color: #777777;
}
.on{ 
  color: blue;
  border-bottom: 3rpx solid blue;}

.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }
.swiper-box view{
  text-align: center;
}
.tab3{
  margin-left: 200px;
} 

/* 下方列表 */
.job-list{
  padding: 15px;
  display: flex;
  flex-direction: column;
}
.job-list .line1,.line2,.line3{
  display: flex;
  flex-direction: row;
  margin: 5px;
}
.line1,.line3{
  justify-content: space-between;
}
.line2{
  justify-content: flex-start;
}
.line1-left{
  font-size: 16px;
}
.line1-right{
  font-size: 16px;
  color: rgba(99, 99, 204, 0.856);
}
.line2 .text{
  font-size: 12px;
  margin-right: 10px;
  color: #787878;
}
.line3 .left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.line3 .imgCompany{
  width: 20px;
  height: 20px;
  margin: 10px;
  padding: 10px;
  border: 1px solid gainsboro;
}
.line3 .left .text{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
}
.line3 .left .text .text-top{
  font-size: 12px;
}
.line3 .left .text .text-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 10px;
}
.line3 .right{
  display: flex;
  align-items: center; 
}
.line3 .right .text{
  font-size: 12px;
  padding: 10px;
  margin-left: 10px;
  border: 1px solid rgba(122, 122, 230, 0.842);
  border-radius: 20px;
}