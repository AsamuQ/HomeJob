/* pages/jobDetails/jobDetails.wxss */
/* 顶端信息 */
.job-list{
  padding: 15px;
  display: flex;
  flex-direction: column;
}
.job-list .line1,.line2,.line3{
  display: flex;
  flex-direction: row;
  margin: 5px;
}
.line1,.line3{
  justify-content: space-between;
}
.line2{
  justify-content: flex-start;
}
.line1-left{
  font-size: 16px;
}
.line1-right{
  font-size: 16px;
  color: rgba(99, 99, 204, 0.856);
}
.line2 .text{
  font-size: 12px;
  margin-right: 10px;
  color: #787878;
}
.line3 .left{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.line3 .imgCompany{
  width: 20px;
  height: 20px;
  margin: 10px;
  padding: 10px;
  border: 1px solid gainsboro;
}
.line3 .left .text{
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
}
.line3 .left .text .text-top{
  font-size: 12px;
}
.line3 .left .text .text-bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 10px;
}
.line3 .right{
  display: flex;
  align-items: center; 
}
.line3 .right .text{
  font-size: 12px;
  padding: 10px;
  margin-left: 10px;
  border: 1px solid rgba(122, 122, 230, 0.842);
  border-radius: 20px;
}


/* 下方标签页 */
.swiper-tab{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  margin: auto 5px;
}
.swiper-tab-list{  
  font-size: 16px;
  display: inline-block;
  width: 80px;
  color: #777777;
  justify-content: center;
}
.on{ color: blue;
  border-bottom: 3rpx solid blue;}

.swiper-box{ 
  display: flex;  width: 100%; overflow: hidden; 
  padding: auto 10px;
}
.swiper-box view{
  text-align: left;
}
swiper-item{
  text-align: start;
  margin: 20px 10px 5px 10px;
}
swiper-item .text{
  font-size:12px ;
  color: #777777;
}
.bottom-button{
  height: 40px;
  position: fixed;
  bottom: 20px;
  left: 10%;
  right: 10%;
  background-color: rgba(75, 75, 207, 0.527);
  border-radius: 20px;
  margin: 0 40px 10px 40px;
}
.bottom-button .text{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 9px;
}
.job_responsbility .desc,.job_qualification .desc{
  margin: 10px 10px;
  font-size: 14px;
  color: #777777;
  word-break: break-all;
}

