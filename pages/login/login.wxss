/* pages/login/login.wxss */
/* 上方图片文字 */
.top{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  align-content: space-between;
  margin: 20px auto 10px 20px;
}
.top .top-picture{
  width: 63px;
  height: 63px;
}
.top text{
  margin-top: 10px;
  font-size: 16px;
}

/* 中间账号密码 */
.list{
  display: flex;
  flex-direction: column;
  margin: 65px 10px;
}
.Input{
  background: #fff;
  display: flex;
  justify-content: flex-end;
  align-content: center;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10px;
}
input{
  text-align:right;
}
 
button{
  background-color: rgb(69, 172, 240);
  color: #fff;
  position: absolute;
  bottom: 60px;
  width: 100%;
  left: 25%;
}
.register{
  color: gainsboro;
  position: absolute;
  bottom: 30px;
  width: 100%;
  left: 40%;
}